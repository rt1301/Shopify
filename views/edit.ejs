<%-include("partials/header.ejs")%>
<div class="container my-4 text-center">
<div class="display-4">Edit Item</div>
<form action="/seller/<%=username%>/<%=item._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="Name">Item Name</label>
        <input type="text" name="item[name]" placeholder="Item Name" value="<%=item.name%>" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Item Description</label>
        <textarea name="item[description]" cols="20" rows="5" class="form-control"><%=item.description%></textarea>
    </div>
    <div class="form-group">
        <label for="image">Image URL</label>
        <input type="text" name="item[image]" value="<%=item.image%>" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" name="item[price]" value="<%=item.price%>" required min="0.5" step="0.1" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Quantity</label>
        <input type="number" min="1" step="1" value="<%=item.quantity%>" required name="item[quantity]" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Category</label>
        <select name="item[category]" class="form-control">
            <option value="Electronics">Electronics</option>
            <option value="Clothing">Clothing</option>
            <option value="Groceries">Groceries</option>
        </select>
    </div>
    <div class="form-group">
        <label for="">Seller's Name</label>
        <input type="text" readonly name="item[sellerName]" value="<%=username%>" class="form-control">
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        <p>Go <a href="/seller/<%=username%>">Back</a></p>
    </div>
</form>
</div>
<%-include("partials/footer.ejs")%>